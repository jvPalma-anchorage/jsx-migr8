{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "registry": "https://registry.npmjs.org",
      "npmClient": "yarn"
    },
    "run": {
      "stream": true
    }
  }
}